{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Comment List</h1>
    <p class="count">
        Displaying {{ comments|length }} comments of {{ comments.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('admin_comment_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Followup</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td>
                        <a href="{{ path('admin_comment_show', { 'id': comment.id }) }}">
                            {{ comment.title }}
                        </a>
                    </td>
                    <td>{{ comment.fullname }}</td>
                    <td>{{ comment.email }}</td>
                    <td>{% if comment.followUp %}Yes{% else %}No{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(comments) }}
    </div>

{% endblock %}
