{% extends 'base.html.twig' %}

{% block title %}Title Edit{% endblock %}

{% block body %}
    <h1>Edit Title</h1>

    {{ form_start(edit_form) }}
    
    <div>

        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#citation">Citation Information</a></li>
            <li><a data-toggle="tab" href="#author">Author Information</a></li>
            <li><a data-toggle="tab" href="#publisher">Publishing Information</a></li>
            <li><a data-toggle="tab" href="#catalogue">Cataloguing Information</a></li>
            <li><a data-toggle="tab" href="#data">Entry Information</a></li>
        </ul>

        <div class="tab-content">
            <div id="citation" class="tab-pane fade in active">
                <h3>Citation Information</h3>
                <p>{{ form_row(edit_form.title) }}</p>
                <p>{{ form_row(edit_form.signedAuthor) }}</p>
                <p>{{ form_row(edit_form.pubdate) }}</p>
                <p>{{ form_row(edit_form.locationOfPrinting) }}</p>
                <p>{{ form_row(edit_form.edition) }}</p>
                <p>{{ form_row(edit_form.editionNumber) }}</p>
                <p>{{ form_row(edit_form.volumes) }}</p>
                <p>{{ form_row(edit_form.titleFirmroles) }}</p>
            </div>
            <div id="author" class="tab-pane fade">
                <h3>Author Information</h3>
                <p>{{ form_row(edit_form.pseudonym) }}</p>
                <p>{{ form_row(edit_form.surrogate) }}</p>
                <p>{{ form_row(edit_form.titleRoles) }}</p>
            </div>
            <div id="publisher" class="tab-pane fade">
                <h3>Publishing Information</h3>
                <p>{{ form_row(edit_form.selfpublished) }}</p>
                <p>{{ form_row(edit_form.dateOfFirstPublication) }}</p>
            </div>
            <div id="catalogue" class="tab-pane fade">
                <h3>Cataloguing Information</h3>
                <p>{{ form_row(edit_form.genre) }}</p>
                <p>{{ form_row(edit_form.format) }}</p>
                <p>{{ form_row(edit_form.imprint) }}</p>
                <p>{{ form_row(edit_form.pagination) }}</p>
                <p>{{ form_row(edit_form.sizeL) }}</p>
                <p>{{ form_row(edit_form.sizeW) }}</p>
                <p>{{ form_row(edit_form.pricePound) }}</p>
                <p>{{ form_row(edit_form.priceShilling) }}</p>
                <p>{{ form_row(edit_form.pricePence) }}</p>
                <p>{{ form_row(edit_form.shelfmark) }}</p>
            </div>
            <div id="data" class="tab-pane fade">
                <h3>Entry Information</h3>
                <p>{{ form_row(edit_form.notes) }}</p>
                <p>{{ form_row(edit_form.source) }}</p>
                <p>{{ form_row(edit_form.sourceId) }}</p>
                <p>{{ form_row(edit_form.source2) }}</p>
                <p>{{ form_row(edit_form.source2Id) }}</p>
                <p>{{ form_row(edit_form.checked) }}</p>
                <p>{{ form_row(edit_form.finalcheck) }}</p>
            </div>
        </div>
   
    </div>
    
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a href="{{ path('title_show', { 'id': title.id }) }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}

{% block styles %}
    <link href="{{ asset('bower/select2/dist/css/select2.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bower/select2-bootstrap-css/select2-bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower/select2/dist/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
    <script src="{{ asset('bower/symfony-collection/jquery.collection.js') }}"></script>
{% endblock %}
