{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Geonames List</h1>
    <p class="count">
        Displaying {{ geonames|length }} geonames of {{ geonames.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Geoname ID</th>
                <th>Name</th>
                <th>ASCII name</th>
                <th>Alternate names</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Feature class</th>
                <th>Feature code</th>
                <th>Country</th>
                <th>CC 2</th>
                <th>Admin 1</th>
                <th>Admin 2</th>
                <th>Admin 3</th>
                <th>Admin 4</th>
                <th>Population</th>
                <th>Elevation</th>
                <th>GTOPO30</th>
                <th>Timezone</th>
                <th>Mod date</th>            </tr>
        </thead>
        <tbody>
        {% for geoname in geonames %}
            <tr>
                <td>
                    <a href="{{ path('geonames_show', { 'id': geoname.geonameid }) }}">
                        {{ geoname.geonameid }}
                    </a>
                </td>
                <td>{{ geoname.name }}</td>
                <td>{{ geoname.asciiname }}</td>
                <td>{{ geoname.alternatenames }}</td>
                <td>{{ geoname.latitude }}</td>
                <td>{{ geoname.longitude }}</td>
                <td>{{ geoname.fclass }}</td>
                <td>{{ geoname.fcode }}</td>
                <td>{{ geoname.country }}</td>
                <td>{{ geoname.cc2 }}</td>
                <td>{{ geoname.admin1 }}</td>
                <td>{{ geoname.admin2 }}</td>
                <td>{{ geoname.admin3 }}</td>
                <td>{{ geoname.admin4 }}</td>
                <td>{{ geoname.population }}</td>
                <td>{{ geoname.elevation }}</td>
                <td>{{ geoname.gtopo30 }}</td>
                <td>{{ geoname.timezone }}</td>
                <td>{% if geoname.moddate %}{{ geoname.moddate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(geonames) }}
    </div>

{% endblock %}
