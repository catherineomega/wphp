{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Title Search</h1>
    {% if titles|length > 0 %}
        <p class="count">
            Displaying {{ titles|length }} titles of {{ titles.getTotalItemCount }} total.
        </p>
    {% elseif  q %}
        <p>Your search for <i>{{ q }}</i> returned zero results.</p>
    {% endif %}
{% endblock %} 

{% block body %}

    <form method="get" class="form-horizontal">
        <fieldset>
            <legend>Full text title search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search terms</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
    {% if titles|length > 0 %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Signed author</th>
                    <th>Surrogate</th>
                    <th>Pseudonym</th>
                    <th>Imprint</th>
                    <th>Pubdate</th>
                    <th>Edition</th>
                    <th>Volumes</th>
                </tr>
            </thead>
            <tbody>
                {% for result in titles %}
                    {% set title = result[0] %}
                    <tr>
                        <td>
                            <a href="{{ path('title_show', { 'id': title.id }) }}">
                                {{ title.title }}
                            </a>
                        </td>
                        <td>{{ title.signedAuthor }}</td>
                        <td>{{ title.surrogate }}</td>
                        <td>{{ title.pseudonym }}</td>
                        <td>{{ title.imprint }}</td>
                        <td>{{ title.pubdate }}</td>
                        <td>{{ title.edition }}</td>
                        <td>{% if title.volumes %}Yes{% else %}No{% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(titles) }}
        </div>
    {% endif %}
{% endblock %}
