{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Title</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
		<div class="btn-group pull-right">
			<a href="{{ path('title_index') }}" class="btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Back
			</a>
		</div>
	</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ title.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
				<td>{{ title.title }}</td>
            </tr>
            <tr>
                <th>Signed author</th>
				<td>{{ title.signedAuthor }}</td>
            </tr>

            <tr>
                <th>Contributors</th>
                <td>
                    {% for tr in title.titleRoles %}
                        {% set person = tr.person %}
                        {{ tr.role.name }}: <a href="{{ path('person_show', {'id': person.id}) }}">{{ person.lastName }}, {{ person.firstName }}</a><br/>
                    {% endfor %}
                </td>
            </tr>

            <tr>
                <th>Firms</th>
                <td>
                    {% for tfr in title.titleFirmRoles %}
                        {% set firm = tfr.firm %}
                        {{ tfr.firmrole.name }}: <a href="{{ path('firm_show', {'id': firm.id}) }}">{{ firm.name }} ({{firm.city.name }})</a><br/>
                    {% endfor %}
                </td>            
            <tr>
                <th>Format</th>
                <td>{{ title.format.name }} ({{ title.format.abbrevOne }}).</td>
            </tr>
            <tr>
                <th>Location of printing</th>
                <td>{{ title.locationOfPrinting.name }} {{ title.locationOfPrinting.country }} ({{ title.locationOfPrinting.latitude }}, {{ title.locationOfPrinting.longitude }})</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ title.genre.name }}</td>
            </tr>
            <tr>
                <th>Source 1</th>
                <td>{{ title.source.name }} {{ title.sourceId }}</td>
            </tr>
            <tr>
                <th>Source 2</th>
                <td>{{ title.source2.name }} {{ title.source2Id }}</td>
            </tr>
            <tr>
                <th>Surrogate</th>
				<td>{{ title.surrogate }}</td>
            </tr>
            <tr>
                <th>Pseudonym</th>
				<td>{{ title.pseudonym }}</td>
            </tr>
            <tr>
                <th>Imprint</th>
				<td>{{ title.imprint }}</td>
            </tr>
            <tr>
                <th>Self published</th>
                <td>{% if title.selfpublished %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Publication date</th>
				<td>{{ title.pubdate }}</td>
            </tr>
            <tr>
                <th>Date of first publication</th>
				<td>{{ title.dateOfFirstPublication }}</td>
            </tr>
            <tr>
                <th>Size (length)</th>
                <td>{% if title.sizeL %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Size (width)</th>
                <td>{% if title.sizeW %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Edition</th>
				<td>{{ title.edition }}</td>
            </tr>
            <tr>
                <th>Volumes</th>
                <td>{{ title.volumes }}</td>
            </tr>
            <tr>
                <th>Pagination</th>
				<td>{{ title.pagination }}</td>
            </tr>
            <tr>
                <th>Price (pound)</th>
				<td>{{ title.pricePound }}</td>
            </tr>
            <tr>
                <th>Price (shilling)</th>
				<td>{{ title.priceShilling }}</td>
            </tr>
            <tr>
                <th>Price (pence)</th>
				<td>{{ title.pricePence }}</td>
            </tr>
            <tr>
                <th>Shelf marks</th>
                <td>
                    {% for mark in title.shelfmark|split(';') %}
                        {{ mark }}<br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Hand checked</th>
                <td>{% if title.checked %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Final check</th>
                <td>{% if title.finalcheck %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Notes</th>
				<td>{{ title.notes }}</td>
            </tr>
        </tbody>
    </table>

<!--For testing purposes-->
{% set authors = title.getTitleRoles('Author') %}
{% set authorCount = authors|length %}

<h3>Bibliographic Entry</h3>
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#bibRef">Cite this item</button>
<div class="modal fade" id="bibRef" tabindex="-1" role="dialog" aria-labelledby="citation">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h3 class="modal-title" id="citation"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Cite</h3>
			</div>
			<div class="modal-body">
				<!--Sets variables to be used in all styles-->
				{% set authors = title.getTitleRoles('Author') %}
				{% set authorCount = authors|length %}
				<!--MLA entry-->
				<div id="mla">
					<h4>MLA</h4>
					<div class="well">
						<p>
							<!--Author(s)-->
							{% if authorCount == 0 %}
							{% elseif authorCount == 1 %}
								{{ authors[0].person.lastName }}, {{ authors[0].person.firstName -}}
								{% if authors[0].person.firstName|last != "." %}.{% endif %}
							{% elseif authorCount == 2 %}
								{{ authors[0].person.lastName }}, {{ authors[0].person.firstName }} and {{ authors[1].person.firstName }} {{ authors[1].person.lastName -}}.
							{% else %}
								{{ authors[0].person.lastName }}, {{ authors[0].person.firstName -}}, et al.
							{%- endif %}
							<!--Title-->
							<em>{{ title.title }}</em>
							{%- if title.title matches '{[^[:punct:]]$}' %}.{% endif %}
							<!--Location-->
							{{title.locationOfPrinting.name}}:
							<!--Publisher-->
							{% for tfr in title.titleFirmRoles %}
								{% if tfr.firmrole.name == 'Publisher' %}
									{% set firm = tfr.firm %}
									{{ firm.name }},
								{% endif %}
							{% endfor %}
							<!--Publication date--> 
							{{ title.pubdate }}.
						</p>
					</div>
				</div>
				<!--APA entry-->
				<div id="apa">
					<h4>APA</h4>
					<div class="well">
						<p>
							<!--Author(s)-->
							{% if authorCount == 0 %}
							{% elseif authorCount == 1 %}
								{% for author in authors %}
									<!--Creates array of name parts in firstName for one author-->
									{% set firstNameSplit = author.person.firstName|split(' ') %}

									{{ author.person.lastName }}, {% for namePart in firstNameSplit %}{{ namePart|first }}.{% endfor %}
								{% endfor %}

							{% elseif authorCount == 2 %}
								{% for author in authors %}
									<!--Creates array of name parts in firstName for one author-->
									{% set firstNameSplit = author.person.firstName|split(' ') %}

									{% if loop.last == false %}
										{{author.person.lastName}}, {% for namePart in firstNameSplit %}{{ namePart|first }}.{% endfor %}, &amp;
									{% else %}
										{{author.person.lastName}}, {% for namePart in firstNameSplit %}{{ namePart|first }}.{% endfor %}
									{% endif %}
								{% endfor %}

							{% elseif (authorCount >= 3) and (authorCount <= 7) %}
								{% for author in authors %}
									<!--Creates array of name parts in firstName for one author-->
									{% set firstNameSplit = author.person.firstName|split(' ') %}

									{% if loop.last == false %}
										{{author.person.lastName}}, {% for namePart in firstNameSplit %}{{ namePart|first }}.{% endfor %}, &amp;
									{% else %}
										{{author.person.lastName}}, {% for namePart in firstNameSplit %}{{ namePart|first }}.{% endfor %}
									{% endif %}
								{% endfor %}
							{% else %}
								{% for author in authors %}
									<!--Creates array of name parts in firstName for one author-->
									{% set firstNameSplit = author.person.firstName|split(' ') %}

									{% if loop.index0 <= 5 %}
										{{author.person.lastName}}, {% for namePart in firstNameSplit %}{{ namePart|first }}.{% endfor %}, 
									{% elseif loop.last %}
										â€¦ {{author.person.lastName}}, {% for namePart in firstNameSplit %}{{ namePart|first }}.{% endfor %}
									{% endif %}
								{% endfor %}
							{% endif %}
							<!--Publication year-->
							({{ title.pubdate }}).
							<!--Title-->
							<em>{{ title.title|capitalize }}</em>
							{%- if title.title|last != ("." or "?" or "!") %}.{% endif %}
							<!--Location-->
							{{title.locationOfPrinting.name}}: 
							<!--Publisher-->
							{% for tfr in title.titleFirmRoles %}
								{% if tfr.firmrole.name == 'Publisher' %}
									{% set firm = tfr.firm %}
									{{ firm.name }}{%- if firm.name|last != "." %}.{% endif %}
								{% endif %}
							{% endfor %}
						</p>
					</div>
				</div>
				<!--Chicago/Turabian: Author-Date entry-->
				<div id="chicago">
					<h4>Chicago/Turabian: Author-Date</h4>
					<div class="well">
						<p>
							<!--Author(s)-->
							{% if authorCount == 0 %}
							{% elseif authorCount == 1 %}
								{% for author in authors %}
									<!--Creates array of name parts in firstName for one author-->
									{% set firstNameSplit = author.person.firstName|split(' ') %}
									{{ author.person.lastName }}, 
									{% for namePart in firstNameSplit %}
										{% if loop.first %}
											{{ namePart }}
										{% else %}
											{{ namePart|first }}.
										{% endif %}
										{% if firstNameSplit|length == 1 %}.{% endif %}
									{% endfor %}
								{% endfor %}

							{% else %}		
								{% for author in authors %}
									<!--Creates array of name parts in firstName for one author-->
									{% set firstNameSplit = author.person.firstName|split(' ') %}

									{% if loop.first %}
										{{ author.person.lastName }}, 
										{% for namePart in firstNameSplit %}
											{% if loop.first %}
												{{ namePart }}
											{% else %}
												{{ namePart|first }}.
											{% endif %}, 
										{% endfor %}

									{% elseif not (loop.first or loop.last) %}
										{% for namePart in firstNameSplit %}
											{% if loop.first %}
												{{ namePart }}
											{% else %}
												{{ namePart|first }}.
											{% endif %} 
											{% endfor %}
											{{ author.person.lastName }},

									{% elseif loop.last %}
										and {% for namePart in firstNameSplit %}
											{% if loop.first %}
												{{ namePart }}
											{% else %}
												{{ namePart|first }}.
											{% endif %}
											{% endfor %}
											{{ author.person.lastName }}.
									{% endif %}
								{% endfor %}
							{% endif %}
							<!--Title-->
							<em>{{ title.title }}</em>
							{%- if title.title|last != ("." or "?" or "!") %}.{% endif %}
							<!--Location-->
							{{title.locationOfPrinting.name}}:
							<!--Publisher-->
							{% for tfr in title.titleFirmRoles %}
								{% if tfr.firmrole.name == 'Publisher' %}
									{% set firm = tfr.firm %}
									{{ firm.name }},
								{% endif %}
							{% endfor %}
							<!--Publication year-->
							{{ title.pubdate }}.
						</p>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn primary">Export BibTeX</button>
			</div>
		</div>
	</div>
</div>

{% endblock %}
