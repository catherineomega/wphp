{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Title List</h1>
    <p class="count">
        Displaying {{ titles|length }} titles of {{ titles.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <form method="get" class="form-horizontal" action="jump">
        <fieldset>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Jump to title ID</label>
                <div class='col-sm-2'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value=''>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-share-alt'></span>
                                Jump
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
    
	<div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('title_export') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-download-alt"></span> Download
            </a>
            <a href="{{ path('title_fulltext') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Firm</th>
                <th>Date
                <th>Edition</th>
            </tr>
        </thead>
        <tbody>
        {% for title in titles %}
            <tr>
                <td>
                    <a href="{{ path('title_show', { 'id': title.id }) }}">
                        {{ title.title }}
                    </a>
                </td>
                <td>
                    {% for tr in title.titleRoles if tr.role.name == 'Author' %}
                        {% set person = tr.person %}
                        <a href="{{ path('person_show', {'id': person.id}) }}">{{ person.lastName }}, {{ person.firstName }}</a><br/>
                    {% endfor %}
                </td>
                <td>
                    {% for tfr in title.titleFirmRoles if tfr.firmrole.name == 'Publisher' %}
                        {% set firm = tfr.firm %}
                        <a href="{{ path('firm_show', {'id': firm.id}) }}">{{ firm.name }} ({{firm.city.name }})</a><br/>
                    {% endfor %}
                </td>            
                <td>{{ title.pubdate }}</td>
                <td>{{ title.edition }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(titles) }}
    </div>

{% endblock %}
