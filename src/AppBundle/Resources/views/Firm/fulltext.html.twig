{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Firm Search</h1>
    {% if firms|length > 0 %}
		<p class="count">
			Displaying {{ firms|length }} firms of {{ firms.getTotalItemCount }} total.
		</p>
	{% endif %}
{% endblock %} 

{% block body %}

    <form method="get" class="form-horizontal">
        <fieldset>
            <legend>Title search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Name contains</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>

	{% if firms|length > 0 %}
		<table class="table table-bordered table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Streetaddress</th>
					<th>Startdate</th>
					<th>Enddate</th>
					<th>Finalcheck</th>            </tr>
			</thead>
			<tbody>
				{% for result in firms %}
					{% set firm = result[0] %}
					<tr>
						<td>
							<a href="{{ path('firm_show', { 'id': firm.id }) }}">
								{{ firm.name }}
							</a>
						</td>
						<td>{{ firm.streetAddress }}</td>
						<td>{{ firm.startDate }}</td>
						<td>{{ firm.endDate }}</td>
						<td>{% if firm.finalcheck %}Yes{% else %}No{% endif %}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="navigation">
			{{ knp_pagination_render(firms) }}
		</div>
	{% endif %}
{% endblock %}
