{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>{{ firm.name }}</h1>
    <div class="row">
        <div class="col-sm-6 text-left">
            {% if previous %}
                Previous firm: <a href="{{ path('firm_show', {'id': previous.id }) }}">{{ previous }}</a>
            {% endif %}
        </div>
        <div class="col-sm-6 text-right">
            {% if next %}
                Next firm: <a href="{{ path('firm_show', {'id': next.id }) }}">{{ next }}</a>
            {% endif %}
        </div>
    </div>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="javascript: history.go(-1)" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ firm.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ firm.name }}</td>
            </tr>
            <tr>
                <th>Street address</th>
                <td>{{ firm.streetAddress }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ firm.city.name }}</td>
            </tr>
            <tr>
                <th>Titles</th>
                <td>
                    {% for tfr in firm.titleFirmroles %}
                        {% set title = tfr.title %}
                        {{tfr.firmrole.name}}: <a href="{{ path('title_show', {'id': title.id}) }}">{{ title.title }}</a><br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Start date</th>
                <td>{{ firm.startDate }}</td>
            </tr>
            <tr>
                <th>End date</th>
                <td>{{ firm.endDate }}</td>
            </tr>
        </tbody>
    </table>

    {% include 'FeedbackBundle:Comment:comment-form.html.twig' with { 'entity': firm } %}				
    {% if is_granted('ROLE_ADMIN') %}
        {% include 'FeedbackBundle:Comment:comments-admin.html.twig' %}
    {% else %}
        {% include 'FeedbackBundle:Comment:comments-view.html.twig' %}
    {% endif %}

{% endblock %}
