{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>{{ person }} Titles</h1>
{% endblock %} 

{% block body %}
    <p>There are {{ person.titleRoles|length }} titles associated with this person.<p>
    <ul>

        {% for tr in person.titleRoles %}
            {% set title = tr.title %}
            <li>{{ include('AppBundle:Title:' ~ format ~ '.html.twig', {'title': title}) }}</li>            
        {% endfor %}
    </ul>
{% endblock %}