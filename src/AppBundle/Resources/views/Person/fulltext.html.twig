{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Person List</h1>
    <p class="count">
        Displaying {{ people|length }} people of {{ people.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

    <form method="get" class="form-horizontal">
        <fieldset>
            <legend>Name search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Name contains</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Last name</th>
                <th>First name</th>
                <th>Title</th>
                <th>Gender</th>
                <th>Date of birth</th>
                <th>Date of death</th>
                <th>Hand checked</th>
                <th>Final check</th>            </tr>
        </thead>
        <tbody>
        {% for result in people %}
			{% set person = result[0] %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.lastName }}
                    </a>
                </td>
                <td>{{ person.firstName }}</td>
                <td>{{ person.title }}</td>
                <td>{{ person.gender }}</td>
                <td>{{ person.dob }}</td>
                <td>{{ person.dod }}</td>
                <td>{% if person.checked %}Yes{% else %}No{% endif %}</td>
                <td>{% if person.finalcheck %}Yes{% else %}No{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(people) }}
    </div>

{% endblock %}
