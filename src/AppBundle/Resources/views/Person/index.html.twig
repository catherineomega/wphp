{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Person List</h1>
    <p class="count">
        Displaying {{ people|length }} people of {{ people.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

	<div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('person_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
            <a href="{{ path('person_fulltext') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Fulltext
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Last name</th>
                <th>First name</th>
                <th>Title</th>
                <th>Gender</th>
                <th>Date of birth</th>
                <th>Date of death</th>
                <th>Hand checked</th>
                <th>Final check</th>            
			</tr>
        </thead>
        <tbody>
			{% for person in people %}
				<tr>
					<td>
						<a href="{{ path('person_show', { 'id': person.id }) }}">
							{{ person.lastName }}
						</a>
					</td>
					<td>{{ person.firstName }}</td>
					<td>{{ person.title }}</td>
					<td>{{ person.gender }}</td>
					<td>{{ person.dob }}</td>
					<td>{{ person.dod }}</td>
					<td>{% if person.checked %}Yes{% else %}No{% endif %}</td>
					<td>{% if person.finalcheck %}Yes{% else %}No{% endif %}</td>
				</tr>
			{% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(people) }}
    </div>

{% endblock %}
