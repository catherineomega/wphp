{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Firm Role List</h1>
    <p class="count">
        Displaying {{ firmroles|length }} firm roles of {{ firmroles.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}


    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('firm_role_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('firm_role_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>            
            </tr>
        </thead>
        <tbody>
            {% for firmrole in firmroles %}
                <tr>
                    <td>
                        <a href="{{ path('firmrole_show', { 'id': firmrole.id }) }}">
                            {{ firmrole.name }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(firmroles) }}
    </div>

{% endblock %}
