{% extends 'base.html.twig' %}

{% block pageheader %}  
    <h1>Geonames</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('geonames_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Location’s URI from Geonames.com" data-trigger="hover" data-placement="bottom">Geoname ID</a></th>
                <td>{{ geoname.geonameid }}</td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Location’s name" data-trigger="hover" data-placement="bottom">Name</a></th>
                <td>{{ geoname.name }}</td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Number of titles associated with the location" data-trigger="hover" data-placement="bottom">Titles</a></th>
                <td>
                    <a href="{{ path('geonames_titles', {'id': geoname.geonameid}) }}">
                        {{ geoname.titles | length }}
                    </a>
                </td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Number of firms associated with the location" data-trigger="hover" data-placement="bottom">Firms</a></th>
                <td>
                    <a href="{{ path('geonames_firms', {'id': geoname.geonameid}) }}">
                        {{ geoname.firms | length }}
                    </a>
                </td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Number of people that were born and died in the location" data-trigger="hover" data-placement="bottom">People</a></th>
                <td>
                    <a href="{{ path('geonames_people', {'id': geoname.geonameid}) }}">
                        Born: {{ geoname.peopleBorn | length }}, Died: {{ geoname.peopleDied | length }}
                    </a>
                </td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Location’s name in ASCII code" data-trigger="hover" data-placement="bottom">ASCII name</a></th>
                <td>{{ geoname.asciiname }}</td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Location’s latitude" data-trigger="hover" data-placement="bottom">Latitude</a></th>
                <td>{{ geoname.latitude }}</td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Location’s longitude" data-trigger="hover" data-placement="bottom">Longitude</a></th>
                <td>{{ geoname.longitude }}</td>
            </tr>
            <tr>
                <th><a href="#" data-toggle="popover" data-content="Country of location" data-trigger="hover" data-placement="bottom">Country</a></th>
                <td>{{ geoname.country }}</td>
            </tr>
            <tr>
                <th>Admin 1</th>
                <td>{{ geoname.admin1 }}</td>
            </tr>
            <tr>
                <th>Admin 2</th>
                <td>{{ geoname.admin2 }}</td>
            </tr>
            <tr>
                <th>Admin 3</th>
                <td>{{ geoname.admin3 }}</td>
            </tr>
            <tr>
                <th>Admin 4</th>
                <td>{{ geoname.admin4 }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
