{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Format List</h1>
    <p class="count">
        Displaying {{ formats|length }} formats of {{ formats.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Abbreviation 1</th>
                <th>Abbreviation 2</th>
                <th>Abbreviation 3</th>
                <th>Abbreviation 4</th>            </tr>
        </thead>
        <tbody>
        {% for format in formats %}
            <tr>
                <td>
                    <a href="{{ path('format_show', { 'id': format.id }) }}">
                        {{ format.name }}
                    </a>
                </td>
                <td>{{ format.abbrevOne }}</td>
                <td>{{ format.abbrevTwo }}</td>
                <td>{{ format.abbrevThree }}</td>
                <td>{{ format.abbrevFour }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(formats) }}
    </div>

{% endblock %}
